{
  "name": "@commercelayer/sdk-utils",
  "version": "3.2.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "scripts": {
    "generate": "tsx gen/generator.ts",
    "lint": "eslint ./src --ext .ts",
    "lintspec": "eslint ./specs/ --ext .spec.ts",
    "build": "tsup",
    "release": "pnpm upgrade && pnpm generate && pnpm lint && pnpm build && pnpm test",
    "test": "vitest",
    "test-local": "tsx test/spot.ts",
    "test-webhook": "tsx test/webhook.ts",
    "coverage": "vitest run --coverage",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "javascript",
    "ecommerce",
    "jamstack",
    "commercelayer"
  ],
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "license": "MIT",
  "description": "Commerce Layer Javascript SDK Utils library",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@commercelayer/eslint-config-ts": "2.2.0",
    "@commercelayer/js-auth": "^7.1.0",
    "@commercelayer/sdk": "^7.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.4.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "jsonapi-typescript": "^0.1.3",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@commercelayer/sdk": "^6 || ^7"
  },
  "repository": "github:commercelayer/commercelayer-sdk-utils",
  "publishConfig": {
    "access": "public"
  }
}

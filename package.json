{
  "name": "@commercelayer/sdk-utils",
  "version": "3.0.0-beta.1",
  "main": "lib/index.cjs",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "lintspec": "eslint ./specs/ --ext .spec.ts",
    "build": "tsup",
    "release": "pnpm upgrade && pnpm build && pnpm test",
    "test": "vitest",
    "test-local": "tsx test/spot.ts",
    "test-webhook": "tsx test/webhook.ts",
    "coverage": "vitest run --coverage",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "javascript",
    "ecommerce",
    "jamstack",
    "commercelayer"
  ],
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "license": "MIT",
  "description": "Commerce Layer Javascript SDK Utils library",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@commercelayer/eslint-config-ts": "1.4.5",
    "@commercelayer/js-auth": "^6.7.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/eslint-plugin": "^1.1.42",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "jsonapi-typescript": "^0.1.3",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "@commercelayer/sdk": "7.0.0-rc.9"
  },
  "repository": "github:commercelayer/commercelayer-sdk-utils",
  "publishConfig": {
    "access": "public"
  }
}
